{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "ankibridge/*": ["*"],
    },
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": [
      "dom",
      "es6",
      "scripthost",
      "es2015",
      "es2019",
      "es2020",
    ],
    "types": [
      "node",
      "jest",
    ],
  },
  "include": [
    "./src/**/*.ts",
  ]
}