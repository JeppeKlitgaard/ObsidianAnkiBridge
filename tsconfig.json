{
  "compilerOptions": {
    "baseUrl": "./src",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es6",
      "scripthost",
      "es2015",
      "es2019",
      "es2020",

    ],
  },
  "include": [
    "./src/**/*.ts",
  ]
}